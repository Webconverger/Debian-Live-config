#!/bin/bash
groupadd -g 1000 webc
# TODO SECURITY restrict group permissions on a typical boot to -G audio,video and even try restrict shell somehow?
useradd -u 1000 -g 1000 -G sudo,cdrom,floppy,audio,dip,video,plugdev,netdev -s /bin/bash webc
sed -i 's/^root:\*:/root:!:/' /etc/shadow
chown -R webc /home/webc
sed -i 's/^user.*//' /etc/sudoers
sed -i 's/^%sudo.*/%sudo ALL=(ALL) NOPASSWD: ALL/' /etc/sudoers

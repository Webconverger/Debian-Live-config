LABEL exit
	MENU LABEL Back to main menu
MENU EXIT
MENU END

label neon-@FLAVOUR@
	menu label Neon Live for Web Digital Signage
	kernel @LINUX@
	append initrd=@INITRD@ @APPEND_LIVE@ bootfrom=removable chrome=neon noblank

label install
	menu label Install Webconverger for automatic updates
	kernel @LINUX@
	append initrd=@INITRD@ kernel-flavour=@FLAVOUR@ systemd.unit=install.target @APPEND_LIVE@ bootfrom=removable

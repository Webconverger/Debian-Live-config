label live-@FLAVOUR@
	menu label ^Live
	menu default
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@

MENU BEGIN ^lang
MENU TITLE Languages

label nl
	menu label ^Dutch
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=nl keyboard-layouts=nl

label fr
	menu label ^French
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=fr keyboard-layouts=fr

label de
	menu label ^German

label sv
	menu label S^wedish
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=sv keyboard-layouts=se

LABEL exit
	MENU LABEL Back to main menu
MENU EXIT
MENU END


	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=de keyboard-layouts=de

label it
	menu label I^talian
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=it keyboard-layouts=it

label pl
	menu label ^Polish
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=pl keyboard-layouts=pl

label nn
	menu label Norwegian ^Nynorsk
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=nn keyboard-layouts=no

label nb
	menu label Norwegian Bokmal
	kernel @KERNEL@
	append initrd=@INITRD@ boot=live config @LB_BOOTAPPEND_LIVE@ locale=nb keyboard-layouts=no

label es
	menu label ^Spanish
